<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/background</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textColor">@color/colorTextWhite</item>
    </style>

</resources>
